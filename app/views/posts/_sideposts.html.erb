          <% @top_post.each do |post| %>
              <%= link_to (post), style: "text-decoration:none;color:#ececec;" do %>
                <div class="side-menu-post" style="display:flex;padding:15px;">
                  <% if post.image.attached? %>
                    <%= image_tag post.image, class: "side-menu-post-image", style: "border-radius: 10px;" %>
                  <% elsif post.video.attached? %>
                    <%= video_tag (url_for(post.video)), :controls =>true, class: "side-menu-post-image", style: "border-radius: 10px;" %>
                  <% else %>
                  <% end %>
                  <div class="side-menu-post-text" style="display:block;">
                      <div class="side-menu-post-title" style="display:block;height:60px;padding-left:10px;overflow: hidden;">
                        <h6><%= post.title %></h6>
                        
                      </div>

                      <div class="side-menu-post-user" style="display:inline-block;padding-left:10px;max-height: 25px;color:#5a5a5a;font-weight: 400;">
                        <%= post.user.username %>
                      </div>
                  </div>

                </div>
              <% end %>
          <% end %>
